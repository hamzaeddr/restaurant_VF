<form method="POST" action="{{path('modifiercarte')}}">
   
     

       
        
            <div class="modal-body ">
               
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            ID Carte : <input type="text" name="idcartem" class="form-control" placeholder="ID Carte" value="{{list.ID_Carte}}" readonly>
                            Nom Client : 
                            <select class="form-control selectclientmodif" name="clientm" required="required" style="margin-bottom: 10px;">
                                                    <option value="1" disabled="disabled" class="optclientadd" selected="selected">Select Client</option>
                                                    {% for item in lst %}
                                                    <option class="optClient" value="{{item.ID_Client}}">{{item.Client}}</option>
                                                    {% endfor %} 
                                                </select>
                            Nom Beneficiaire : 
                            <select class="form-control selectbenefmodif" name="beneficiairem" required="required" style="margin-bottom: 10px;">
                                                    <option value="1" disabled="disabled" class="optbenefmodif" selected="selected">Select Bénéficiaire</option>
                                                </select>
                        </div>
                        <div class="col-lg-6">
                            Date Validité : <input type="Date" name="datevaliditem" class="form-control" placeholder="ID Carte">
                            Tarif : 
                            <select class="form-control selecttarifmodif" name="tarifm" required="required" style="margin-bottom: 10px;">
                                <option value="1" disabled="disabled" class="opttarifmodif" selected="selected">Select Tarif</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                        Observation : <textarea class="form-control" name="obsm" id="exampleFormControlTextarea1" rows="3"></textarea>
                            
                        </div>
                    </div>
                </div>

            </div>
           
            <div class="modal-footer">
                <button type="submit" class="btn btn-success ">Modifier</button>
                <button type="button" class="btn btn-danger">Fermer</button>
            </div>
            
            
        
    </form>